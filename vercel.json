{
  "version": 2,
  "functions": {
    "api/contact.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "GMAIL_APP_PASSWORD": "@gmail_app_password"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/contact",
      "dest": "/api/contact.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install"
}